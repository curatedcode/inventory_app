extends ../layout

block content 
  h1= title

  if items.length

    p.delete #[strong Delete the following items before attempting to delete this category.]

      ul.detail
        each item in items
          li 
            a(href=item.url) #{item.name}

  else
    p.delete Do you really want to delete this Category?

    form(method='POST' action='')
      div
        input#category(type='hidden',name='category', required='true', value=category.name )

      button.submit(type='submit') Delete